  "dependencies": {
    "@bitwarden/jslib-angular": "file:angular",
    "@bitwarden/jslib-common": "file:common",
    "@bitwarden/jslib-electron": "file:electron",
    "@bitwarden/jslib-node": "file:node"
  },
  "engines": {
    "node": "~18",
    "npm": "~9"
