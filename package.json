    "clean-webpack-plugin": "4.0.0",
    "concurrently": "9.0.1",
    "copy-webpack-plugin": "12.0.2",
    "cross-env": "7.0.3",
    "css-loader": "7.1.2",
    "dotenv": "16.4.5",
    "electron": "28.3.3",
